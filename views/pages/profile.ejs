<!DOCTYPE html>
<html lang="FR">
<head>

    <title>MayDay QPLT</title>
    <link rel="stylesheet" href="stylesheets/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>

<div class="main">

    <div class="side-bar">
        <div class="tabs">
            <% if (locals.img) { %>
            <img src="data:image/jpeg;base64,<%=img %>" onclick="window.location.href='profile';" alt="">
            <% } %>
            <% if(!locals.img) { %>
            <img src="images/defaultProfilePic.png" onclick="window.location.href='profile';" alt="">
            <% } %>
            <div onclick="window.location.href='deconnexion';">LOG OUT</div>
            <hr>
            <div onclick="openHome()">HOME</div>
            <div onclick="openWeather()">WEATHER</div>
            <div onclick="openTrends()">TRENDS</div>
            <div onclick="openTransport()">PUBLIC TRANSPORT</div>
            <div onclick="openCovid()">COVID-19</div>
        </div>
        <hr>
        <button id="mode-button" onclick="toggleMode()"></button>
    </div>

    <div class="profile-bar">
        <h1>PROFILE</h1>
        <button onclick="window.location.href='modifier_compte';">EDIT PROFILE</button>
        <div onclick="">Last Name :</div>
        <div onclick="">First Name :</div>
        <div onclick="">Username :</div>
        <div onclick="">Birthday :</div>
        <% if (locals.img) { %>
            <img src="data:image/jpeg;base64,<%=img %>" alt="">
        <% } %>
        <% if(!locals.img) { %>
            <img src="images/defaultProfilePic.png" onclick="window.location.href='profile';" alt="">
        <% } %>
    </div>

</div>

<script src="javascripts/app.js"></script>
</body>
</html>